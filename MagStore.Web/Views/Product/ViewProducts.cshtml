<!-- MAIN CONTENT START -->

	<section class="main wrapper listing">
    <div id="breadcrumb">
        @Html.ActionLink("Manage Shop", "Manage", "Shop") / View Products
    </div>
		<article>
			<h1>Products</h1>
			<h6>Border-less table</h6>
			<table class="no-borders">
			    <tr>
			        <th scope="col">Id</th>
			        <th scope="col">Name</th>
			        <th scope="col">ProductType</th>
			        <th scope="col">Description</th>
			        <th scope="col">Brand</th>
			        <th scope="col">Colour</th>
			        <th scope="col">Age Ranges</th>
			        <th scope="col">Discount Amount</th>
			        <th scope="col">Discount Type</th>
			        <th scope="col">Gender</th>
			        <th scope="col">Price</th>
			        <th scope="col">Promotions</th>
			        <th scope="col">Rating</th>
			        <th scope="col">Reviews</th>
			        <th scope="col">Size</th>
			        <th scope="col">Supplier</th>
			    </tr>
                @foreach (var product in @Model.Products)
                {
                    <tr>
                        <td>@Html.ActionLink(product.Id, "EditProduct", "Product", new { Id = product.Id })</td>
                        <td>@product.Name</td>
                        <td>@product.ProductType</td>
                        <td>@product.Description</td>
                        <td>@product.Brand</td>
                        <td>@product.Colour</td>
                        <td>
                            @if (product.AgeRange != null)
                            {
                                foreach (var age in product.AgeRange)
                                {
                                    <b>(@age)</b>
                                }
                            }
                        </td>
                        <td>@product.DiscountAmount</td>
                        <td>@product.DiscountType</td>
                        <td>@product.Gender</td>
                        <td>@product.Price</td>
                        <td>
	                        @if (product.Promotions != null)
                         {
	                            <b>Promotions:</b>
	                            <br />
                             foreach (var promotion in @product.Promotions)
                             {
	                                @Html.ActionLink(product.Name, "Promotion", "Promotion")
                             }
                         }
                        </td>
                        <td>@product.Rating</td>
                        <td>
                            @product.Reviews
                        </td>
                        <td>@product.Size</td>
                        <td>@product.Supplier</td>
                    </tr>
                }
			</table>
			<p>&nbsp;</p>
		</article>
		
