<!-- HEADER END -->

            <asp:ContentPlaceHolder ID="MainContent" runat="server" />

<!-- FOOTER START -->

	<footer>
	
		<div class="wrapper">
		
			<section class="column" id="menu">
				<h3>Shopshifter</h3>
				<ul>
					<li><a href="index.html">Home</a></li>
					<li><a href="typography.html">About This Theme</a></li>
					<li><a href="category.html">Catalog</a></li>
					<li><a href="blog.html">Blog</a></li>
					<li><a href="contact.html">Contact Us</a></li>
				</ul>
			</section><!-- #menu end -->
			
			<section class="column" id="contact">
				<h3>Contact Us</h3>
				<p>
					Dunstaffnage Hall<br>
					St. Brigid’s Church Road<br>
					Stillorgan, Co. Dublin, Ireland
				</p>
				<p>
					Telephone: +353 1 222 3333<br>
					Fax: +353 1 222 3333<br>
					Email: <a href="mailto:info@cofeecream.eu">info@cofeecream.eu</a>
				</p>
			</section><!-- #contact end -->
			
			<section class="column" id="tweets">
				<h3>Tweets</h3>
				<script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
				<script>
				    new TWTR.Widget({
				        version: 2,
				        type: 'profile',
				        rpp: 1,
				        interval: 30000,
				        width: 202,
				        height: 300,
				        theme: {
				            shell: {
				                background: 'none',
				                color: '#ffffff'
				            },
				            tweets: {
				                background: 'none',
				                color: '#999999',
				                links: '#ffffff'
				            }
				        },
				        features: {
				            scrollbar: false,
				            loop: false,
				            live: false,
				            behavior: 'all'
				        }
				    }).render().setUser('coffeecreameu').start();
				</script>
			</section><!-- #tweets end -->
			
			<section class="column" id="payments">
				<h3>Payments</h3>
				<ul>
					<li class="american-express">American Express</li>
					<li class="discover">Discover</li>
					<li class="visa">Visa</li>
					<li class="mastercard">Mastercard</li>
					<li class="maestro">Maestro</li>
					<li class="cirrus">Cirrus</li>
					<li class="paypal">Paypal</li>
					<li class="google-checkout">Google Checkout</li>
